<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/css/font-awesome.css') }}">
        <link rel="stylesheet" href="{{ asset('build/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('build/css/style.css') }}">
    {% endblock %}
</head>
<body>
<header>
    <div class="navbar navbar-default navbar-static-top bg-dark" role="navigation">
        <div class="container">
            <div class="navbar-header col-md-3 col-lg-2">
                <a href="{{ path('admin_main')}}" class="navbar-brand">
                    <i class="fa fa-home" aria-hidden="true"></i> Admin menu
                </a>
            </div>

            <div class="navbar-header col-md-3 col-lg-2">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="{{ path('logout') }}" class="navbar-brand">
                            <i class="fa fa-sign-out" aria-hidden="true"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>
{% block body %}{% endblock %}
</body>
    {% block javascripts %}
        <script src="{{ asset('build/js/jquery-3.3.1.slim.min.js') }}"></script>
        <script src="{{ asset('build/js/popper.min.js') }}"></script>
        <script src="{{ asset('build/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('build/js/main.js') }}"></script>
    {% endblock %}
</html>
