{% extends 'base.html.twig' %}

{% block title %}Editer{% endblock %}

{% block body %}

<div class="container">
    <div class="page-header text-center mt-3 mb-4">
        <h1>Editer</h1>
    </div>
    <div>
        {{ form_start(form) }}
        {{ form_errors(form, {'attr': {'label': '', 'class': 'alert alert-danger'}}) }}
        {{ form_row(form.title) }}
        {{ form_row(form.quantity) }}
        <button class="btn btn-success" type="submit">Modifier</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
