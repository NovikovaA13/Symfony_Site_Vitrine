{% extends 'adminbase.html.twig' %}

{% block title %}Modifier Service{% endblock %}

{% block body %}

    <div class="container">
        <div class="page-header text-center mt-3 mb-4"><h1>Modifier Service</h1>
        </div>
    <div>
        {{ form_start(form) }}
        {{ form_errors(form, {'attr': {'label': '', 'class': 'alert alert-danger'}}) }}
        {{ form_row(form.title) }}
        {{ form_row(form.text) }}
        {{ form_row(form.image) }}
